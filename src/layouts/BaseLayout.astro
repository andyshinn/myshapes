---
import '../styles/global.css';
import { Icon } from 'astro-icon/components';
import { SITE_NAME } from 'astro:env/server';

export interface Props {
  title: string;
  description?: string;
  showBackButton?: boolean;
}

const { title, description = "A collection of CAD models and technical documentation", showBackButton = false } = Astro.props;
---

<html lang="en" data-theme="myshapes">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
	</head>
	<body class="bg-base-200">
		<!-- Header -->
		<header class="navbar bg-base-200 shadow-lg mb-4 min-h-16">
			<div class="container mx-auto flex justify-between items-center h-16">
				<div class="navbar-start">
					<a href="/" class="btn btn-ghost text-xl font-bold">{SITE_NAME}</a>
				</div>
				<div class="navbar-end pr-40">
					<div class="flex items-center gap-2">
						{showBackButton && (
							<a href="/" class="btn btn-ghost btn-sm">‚Üê Back to Gallery</a>
						)}
						{!showBackButton && (
							<slot name="header-end" />
						)}
					</div>
				</div>
			</div>
		</header>

		<!-- GitHub Corner - positioned outside header -->
		<div class="fixed top-0 right-0 z-50">
			<div class="w-50 h-50 bg-base-100 transform rotate-45 origin-top-right translate-x-44"></div>
			<a
				href="https://github.com/andyshinn/myshapes"
				class="absolute top-2 right-2 z-10 p-2 hover:bg-base-300 rounded transition-colors"
				target="_blank"
				rel="noopener"
				aria-label="View on GitHub"
			>
				<Icon name="simple-icons:github" class="w-8 h-8" />
			</a>
		</div>

		<!-- Main Content -->
		<main class="container mx-auto">
			<slot />
		</main>

		<!-- Footer -->
		<footer class="footer footer-center p-6 bg-base-300 text-base-content mt-12">
			<div class="grid grid-flow-col gap-4">
				<a href="https://github.com/andyshinn" class="link hover:text-primary" target="_blank" rel="noopener" aria-label="GitHub link">
					<Icon name="simple-icons:github" class="w-6 h-6" />
				</a>
				<a href="https://discordapp.com/users/andyshinn" class="link hover:text-primary" target="_blank" rel="noopener" aria-label="Discord link">
					<Icon name="simple-icons:discord" class="w-6 h-6"  />
				</a>
				<a href="https://www.youtube.com/@andyshinn" class="link hover:text-primary" target="_blank" rel="noopener" aria-label="YouTube link">
					<Icon name="simple-icons:youtube" class="w-6 h-6" />
				</a>
				<a href="https://andyshinn.as" class="link hover:text-primary" target="_blank" rel="noopener" aria-label="Website link">
					<Icon name="mdi:web" class="w-6 h-6" />
				</a>
			</div>
			<div>
				<p class="text-sm">Built by <a href="https://andyshinn.as" class="link hover:text-primary" target="_blank" rel="noopener">Andy Shinn</a></p>
				<p class="text-xs opacity-60">Powered by <a href="https://astro.build" class="link hover:text-primary" target="_blank" rel="noopener">Astro</a> and <a href="https://daisyui.com" class="link hover:text-primary" target="_blank" rel="noopener">DaisyUI</a></p>
			</div>
		</footer>
	</body>
</html>
